{
  "name": "@heddendorp/trpc",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": "^9.12.2"
  },
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "lint-fix": "pnpm -r lint -- --fix && pnpm format-fix",
    "format": "prettier \"**/*\" --ignore-unknown",
    "format-fix": "pnpm format --write --list-different",
    "clean": "find . -name node_modules -o -name dist -type d -prune | xargs rm -rf",
    "prepublish": "pnpm build",
    "publish": "lerna publish"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "lerna": "^8.1.2",
    "prettier": "^3.3.3",
    "typescript": "^5.8.2"
  }
}
