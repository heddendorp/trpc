{
  "name": "@trpc/tanstack-angular-query",
  "type": "module",
  "version": "11.4.3",
  "description": "TanStack Angular Query Integration for tRPC",
  "author": "tRPC Team",
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "homepage": "https://trpc.io/docs/client/tanstack-angular-query/setup",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trpc/trpc.git",
    "directory": "packages/tanstack-angular-query"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint --cache src",
    "test-run:tsc": "tsc --noEmit --pretty",
    "ts-watch": "tsc --watch"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "package.json",
    "!**/*.test.*",
    "!**/__tests__"
  ],
  "eslintConfig": {
    "rules": {
      "no-restricted-imports": [
        "error",
        "@trpc/tanstack-angular-query"
      ],
      "@typescript-eslint/prefer-function-type": "off"
    }
  },
  "peerDependencies": {
    "@tanstack/angular-query-experimental": ">=5.80.3",
    "@trpc/client": "11.4.3",
    "@trpc/server": "11.4.3",
    "@angular/core": ">=16.0.0",
    "typescript": ">=5.7.2"
  },
  "devDependencies": {
    "@tanstack/angular-query-experimental": ">=5.80.3",
    "@trpc/client": "11.4.3",
    "@trpc/server": "11.4.3",
    "@angular/core": "^18.0.0",
    "@types/node": "^22.13.5",
    "eslint": "^9.26.0",
    "tsdown": "0.12.7",
    "typescript": "^5.8.2",
    "vitest": "^3.1.2",
    "zod": "^3.25.51"
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": [
    "https://trpc.io/sponsor"
  ]
}